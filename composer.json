{
    "name": "sunrise/http-header",
    "homepage": "https://github.com/sunrise-php/http-header",
    "description": "HTTP header interface",
    "license": "MIT",
    "keywords": [
        "fenric",
        "sunrise",
        "http",
        "header"
    ],
    "authors": [
        {
            "name": "Anatoly Fenric",
            "email": "afenric@gmail.com",
            "homepage": "https://github.com/fenric"
        }
    ],
    "require": {
        "php": "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5.20|9.5.0",
        "sunrise/coding-standard": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Sunrise\\Http\\Header\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "phpcs",
            "psalm",
            "XDEBUG_MODE=coverage phpunit --coverage-text --colors=always"
        ],
        "build": [
            "phpdoc -d src/ -t phpdoc/",
            "XDEBUG_MODE=coverage phpunit --coverage-html coverage/"
        ]
    }
}
